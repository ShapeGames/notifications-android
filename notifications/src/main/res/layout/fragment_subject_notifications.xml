<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="dk.shape.games.notifications.presentation.viewmodels.notifications.SubjectNotificationSheetViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="#f5f5f5">

        <FrameLayout
            android:id="@+id/notificationsToolbar"
            style="?attr/Notifications.Subjects.Screen.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="3dp"
            tools:background="@drawable/vector_notification_toolbar_background">

            <androidx.appcompat.widget.Toolbar
                style="?attr/Notifications.Subjects.Screen.Toolbar.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:buttonGravity="center_vertical"
                app:elevation="4dp"
                app:navigationIcon="@drawable/ic_close"
                app:navigationOnClickListener="@{viewModel.onClosePressedListener}"
                tools:layout_height="match_parent"
                tools:tint="#1d5aaf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="center"
                android:text="@{viewModel.screenTitle}"
                android:textAppearance="?attr/Notifications.Subjects.Screen.Toolbar.Title"
                tools:text="Notifications"
                tools:textColor="#1d5aaf"
                tools:textSize="16sp"
                tools:textStyle="bold" />
        </FrameLayout>

        <dk.shape.viewswitcher.BindingViewSwitcher
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:item="@{viewModel.notificationSwitcherViewModel.item}"
            app:itemBinding="@{viewModel.notificationSwitcherViewModel.itemBinding}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationsToolbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
