<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="dk.shape.games.notifications.presentation.viewmodels.notifications.SubjectNotificationSheetViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="?attr/Notifications.Subjects.Screen.Background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="#f5f5f5"
        tools:background="#f5f5f5">

        <FrameLayout
            android:id="@+id/notificationsToolbar"
            style="?attr/Notifications.Subjects.Screen.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/notificationsViewSwitcher">

           <androidx.cardview.widget.CardView
               android:layout_gravity="center_vertical|start"
               app:cardCornerRadius="44dp"
               app:cardElevation="0dp"
               android:layout_width="44dp"
               android:layout_height="44dp">
               <ImageView
                   style="?attr/Notifications.Subjects.Screen.Toolbar.Navigation"
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:layout_gravity="center"
                   android:clickable="true"
                   android:focusable="true"
                   app:showRipple="@{true}"
                   app:backgroundRipple="@{true}"
                   app:borderlessRipple="@{true}"
                   android:onClick="@{viewModel.onClosePressedListener}"
                   android:src="@drawable/ic_bottomsheet_close"
                   tools:backgroundTint="@color/blue_300"/>
           </androidx.cardview.widget.CardView>

            <TextView
                style="?attr/Notifications.Subjects.Screen.Toolbar.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="center"
                android:text="@{viewModel.screenTitle}"
                android:textAppearance="?attr/Notifications.Subjects.Screen.Toolbar.Title"
                tools:text="Notifications"
                tools:textColor="#1d5aaf"
                tools:textSize="16sp"
                tools:textStyle="bold" />
        </FrameLayout>

        <dk.shape.viewswitcher.BindingViewSwitcher
            android:id="@+id/notificationsViewSwitcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            app:item="@{viewModel.notificationSwitcherViewModel.item}"
            app:itemBinding="@{viewModel.notificationSwitcherViewModel.itemBinding}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
