<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="dk.shape.games.notifications.presentation.viewmodels.notifications.SubjectNotificationViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        tools:background="#f5f5f5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subjectName"
            style="?attr/Notifications.Subjects.Screen.Subject.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="26dp"
            android:text="@{viewModel.subjectName}"
            app:layout_constraintBottom_toTopOf="@id/notificationItems"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Manchester City"
            tools:textColor="#2d2d2d"
            tools:textSize="16sp"
            tools:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            style="?attr/Notifications.Subjects.Screen.Subject.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:checked="@{viewModel.activeNotificationState}"
            android:clickable="@{!viewModel.isSavingPreferences}"
            android:padding="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:thumb="@drawable/notifications_switch_thumb"
            app:layout_constraintBottom_toBottomOf="@id/subjectName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/subjectName"
            app:onStateChange="@{viewModel.onStateChangeListener}"
            tools:checked="false" />

        <include
            android:id="@+id/notificationItems"
            layout="@layout/view_subject_notifications_type_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@id/notificationsSaveButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:viewModel="@{viewModel.notificationTypesCollection}"
            tools:layout_height="100dp" />

        <FrameLayout
            android:id="@+id/notificationsSaveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                style="?attr/Notifications.Subjects.Screen.SaveButton"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="@{!viewModel.isSavingPreferences}"
                android:enabled="@{viewModel.hasStateChanges}"
                android:gravity="center"
                android:onClick="@{viewModel.onPreferencesSavedListener}"
                android:text="@{viewModel.isSavingPreferences ? @string/empty : @string/save_my_preferences}"
                android:textAlignment="gravity"
                tools:background="@drawable/notifications_save_button"
                tools:layout_height="30dp"
                tools:layout_marginHorizontal="23dp"
                tools:padding="6dp"
                tools:text="Save my preferences"
                tools:textAllCaps="false"
                tools:textColor="@color/grey_000"
                tools:textStyle="bold" />

            <ProgressBar
                style="?attr/Notifications.Subjects.Type.Saving.ProgressBar"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:elevation="6dp"
                android:theme="?attr/Notifications.Subjects.Type.Saving.ProgressBar"
                android:visibility="@{viewModel.isSavingPreferences ? View.VISIBLE : View.INVISIBLE}"
                tools:visibility="visible" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
