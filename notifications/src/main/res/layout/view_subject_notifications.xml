<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="dk.shape.games.notifications.presentation.viewmodels.notifications.SubjectNotificationViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        tools:background="#f5f5f5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subjectName"
            style="?attr/Notifications.Subjects.Screen.Subject.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="26dp"
            android:text="@{viewModel.subjectName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/notificationItems"
            tools:text="Manchester City"
            tools:textColor="#2d2d2d"
            tools:textSize="16sp"
            tools:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            style="?attr/Notifications.Subjects.Screen.Subject.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:checked="@{viewModel.activeNotificationState}"
            android:padding="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:thumb="@drawable/vector_notifications_switch_thumb"
            app:layout_constraintBottom_toBottomOf="@id/subjectName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/subjectName"
            app:onStateChange="@{viewModel.onStateChangeListener}"
            app:thumbTextPadding="4dp"
            app:track="@drawable/vector_notifications_switch_track"
            tools:checked="false" />

        <include
            android:id="@+id/notificationItems"
            layout="@layout/view_subject_notifications_type_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/notificationsSaveButton"
            app:viewModel="@{viewModel.notificationTypesCollection}"
            tools:layout_height="100dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/notificationsSaveButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:enabled="@{viewModel.hasStateChanges}"
            android:background="@drawable/vector_notifications_save_button"
            android:layout_marginHorizontal="23dp"
            android:onClick="@{viewModel.onPreferencesSavedListener}"
            android:layout_marginBottom="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textAlignment="gravity"
            android:text="Save my preferences"
            android:textColor="@color/grey_000"
            android:textStyle="bold"
            android:textAllCaps="false"
            tools:padding="0dp"
            tools:text="Save my preferences"
            tools:textColor="@color/grey_000"
            tools:textStyle="bold"/>

        <FrameLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/vector_notifications_save_button"
            android:layout_marginHorizontal="23dp"
            android:clipToPadding="true"
            android:clipChildren="true"
            android:onClick="@{viewModel.onPreferencesSavedListener}"
            android:layout_marginBottom="55dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="1dp"
            android:translationZ="5dp"
            app:addButtonBehaviour="@{true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:visibility="@{viewModel.savingPreferences ? View.INVISIBLE : View.VISIBLE}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="gravity"
                android:text="Save my preferences"
                android:textColor="@color/grey_000"
                android:textStyle="bold"
                android:textAllCaps="false"
                tools:padding="0dp"
                tools:text="Save my preferences"
                tools:textColor="@color/grey_000"
                tools:textStyle="bold"/>

            <ProgressBar
                style="@style/Notifications.Subjects.Loading.ProgressBar"
                android:visibility="@{viewModel.savingPreferences ? View.VISIBLE : View.INVISIBLE}"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:visibility="invisible"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
