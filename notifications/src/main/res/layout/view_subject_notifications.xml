<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="dk.shape.games.notifications.presentation.viewmodels.notifications.SubjectNotificationViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        tools:background="#f5f5f5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subjectName"
            style="?attr/Notifications.Subjects.Screen.Subject.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:text="@{viewModel.subjectName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Manchester City"
            tools:textColor="#2d2d2d"
            tools:textSize="16sp"
            tools:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            style="?attr/Notifications.Subjects.Screen.Subject.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:checked="@{viewModel.activeNotificationState}"
            android:clickable="@{!viewModel.saveButtonViewModel.isSavingPreferences}"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:thumb="@drawable/notifications_switch_thumb"
            app:layout_constraintBottom_toBottomOf="@id/subjectName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/subjectName"
            app:onStateChange="@{viewModel.onStateChangeListener}"
            tools:checked="false" />

        <include
            android:id="@+id/notificationItems"
            layout="@layout/view_notifications_type_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/notificationsSaveButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subjectName"
            app:layout_constraintVertical_bias="0"
            app:viewModel="@{viewModel.notificationTypesCollection}"
            tools:layout_height="300dp" />

        <include
            android:id="@+id/notificationsSaveButton"
            layout="@layout/view_notification_save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:viewModel="@{viewModel.saveButtonViewModel}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
