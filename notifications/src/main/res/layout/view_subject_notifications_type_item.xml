<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="dk.shape.games.notifications.presentation.viewmodels.notifications.SubjectNotificationTypeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="?attr/Notifications.Subjects.Type.Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{viewModel.isLastElement ? @drawable/vector_notification_type_background_no_line : @drawable/vector_notification_type_background}"
        tools:background="@drawable/vector_notification_type_background"
       
        tools:layout_height="50dp">

        <FrameLayout
            android:id="@+id/notificationTypeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/vector_notifications_toggle_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:src="@{viewModel.icon}"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/ic_notifications" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{viewModel.notificationTypeName}"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/notificationTypeIcon"
            app:layout_constraintBottom_toBottomOf="@id/notificationTypeIcon"
            app:layout_constraintStart_toEndOf="@id/notificationTypeIcon"
            app:layout_constraintEnd_toStartOf="@id/notificationTypeCheckBox"
            tools:textColor="#2d2d2d"
            tools:lineSpacingExtra="0sp"
            tools:textStyle="bold"
            tools:textSize="15sp"
            tools:text="Inden Event Starter"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/notificationTypeCheckBox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="13dp"
            android:checked="@{viewModel.isActivated}"
            app:onStateChange="@{viewModel.onStateChangeListener}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/notificationTypeIcon"
            app:layout_constraintBottom_toBottomOf="@id/notificationTypeIcon"
            android:button="@drawable/vector_notifications_toggle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
