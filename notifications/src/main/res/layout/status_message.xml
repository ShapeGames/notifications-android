<?xml version="1.0" encoding="utf-8"?>


<dk.shape.games.statusmessages.presentation.StatusMessageView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_message_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:tag="layout/status_message_0">

    <View
        android:id="@+id/blockingBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/status_message_background_blocking"
        android:tag="binding_1" />

    <View
        android:id="@+id/gradientBackground"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="bottom"
        android:background="@drawable/status_message_gradient_vertical_blue"
        android:clickable="false"
        android:focusable="false" />

    <dk.shape.games.statusmessages.presentation.SimpleDragContainer
        android:id="@+id/dragContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:tag="binding_2">

        <androidx.cardview.widget.CardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:tag="binding_3"
            app:cardCornerRadius="2dp"
            tools:cardBackgroundColor="@color/status_message_background_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/statusContentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="12dp"
                    android:tag="binding_4">

                    <FrameLayout
                        android:id="@+id/status_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="15dp"
                        android:tag="binding_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:tag="binding_6"
                            tools:src="@drawable/status_message_icon_low_funds" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:tag="binding_7"
                        android:textColor="@color/status_message_white"
                        android:textSize="15sp"
                        android:textStyle="bold"

                        app:layout_constraintBottom_toTopOf="@id/textMessage"
                        app:layout_constraintLeft_toRightOf="@+id/status_icon"
                        app:layout_constraintRight_toLeftOf="@+id/close_icon"
                        app:layout_constraintTop_toTopOf="parent"

                        tools:text="Dit spil er nu delt" />

                    <TextView
                        android:id="@+id/textMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="1.0"
                        android:tag="binding_8"

                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/status_icon"
                        app:layout_constraintRight_toLeftOf="@+id/close_icon"
                        app:layout_constraintTop_toBottomOf="@id/title"


                        tools:text="Du har lige nu 2 kr. på din spilkonto. Sæt penge ind for at spille på Oddset." />

                    <ImageView
                        android:id="@+id/close_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tag="binding_9"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5"

                        tools:src="@drawable/status_message_close_icon_info" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <dk.shape.games.statusmessages.presentation.StatusMessageViewButtons
                    android:id="@+id/actionButtonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/status_message_background_white_dark"
                    android:tag="binding_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textMessage" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </dk.shape.games.statusmessages.presentation.SimpleDragContainer>
</dk.shape.games.statusmessages.presentation.StatusMessageView>
         