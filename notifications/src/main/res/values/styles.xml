<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Notification list -->

    <style name="Notifications.Container" parent="@style/Widget">
        <item name="android:background">#f5f6f9</item>
    </style>

    <style name="Notifications.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#f5f6f9</item>
    </style>

    <style name="Notifications.Toolbar.Title" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#f26940</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Notifications.Empty.Headline" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#565656</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Notifications.Empty.Description" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#bf3b2d3d</item>
    </style>

    <style name="Notifications.Card" parent="CardView">
        <item name="cardElevation">9dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="Notifications.EventName" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#030303</item>
    </style>

    <style name="Notifications.NotificationType" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7d7d7d</item>
    </style>

    <style name="Notifications.ActiveSubscriptions" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7d7d7d</item>
    </style>

    <!-- Notification types -->

    <style name="Notifications.Types.Container" parent="@style/Widget">
        <item name="android:background">#f5f6f9</item>
    </style>

    <style name="Notifications.Types.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#f5f6f9</item>
    </style>

    <style name="Notifications.Types.Toolbar.Title" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#f26940</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Notifications.Types.EventIcon" parent="@style/Widget">
        <item name="android:tint">#3b2d3d</item>
    </style>

    <style name="Notifications.Types.EventLevel2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#b33b2d3d</item>
        <item name="android:textSize">10.6sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Notifications.Types.EventLevel3" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#3b2d3d</item>
        <item name="android:textSize">10.6sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Notifications.Types.EventDate" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#a19fa3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Notifications.Types.EventTime" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#47434c</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Notifications.Types.EventName" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Notifications.Types.Name" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- BottomSheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <!-- Notification Settings -->
    <style name="Notifications.Settings.Toolbar.Container" parent="@style/Widget" />

    <style name="Notifications.Settings.Toolbar.Icon" parent="@style/Widget" />

    <style name="Notifications.Settings.Toolbar.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Notifications.Settings.Entry.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:outlineSpotShadowColor">@color/grey_999_alpha_75</item>
    </style>

    <style name="Notifications.Settings.Entry.Container" parent="@style/Widget" >
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingHorizontal">13dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="Notifications.Settings.Entry.Name" parent="Widget.AppCompat.TextView" >
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Notifications.Settings.Entry.Settings" parent="@style/Widget" />

    <style name="Notifications.Settings.Info.Text" parent="Widget.AppCompat.TextView" >
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Notifications.Settings.Info.Icon" parent="@style/Widget" />

    <style name="Notifications.Settings.Empty.Icon" parent="@style/Widget" />

    <style name="Notifications.Settings.Empty.Title" parent="Widget.AppCompat.TextView" >
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Notifications.Settings.Empty.Description" parent="Widget.AppCompat.TextView" >
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:paddingHorizontal">60dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- BottomSheet Event Notifications -->
    <style name="Notifications.Event.Screen.Icon" parent="@style/Widget" />

    <style name="Notifications.Event.Screen.Text" parent="Widget.AppCompat.TextView" >
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Notifications.Event.Screen.Text.Level2" parent="Notifications.Event.Screen.Text" >
        <item name="android:alpha">0.8</item>
    </style>

    <!-- BottomSheet Subject Notifications -->
    <style name="Notifications.Subjects.Screen.Background" parent="@style/Widget" />

    <style name="Notifications.Subjects.Screen.Subject.Name" parent="Widget.AppCompat.TextView" />

    <style name="Notifications.Subjects.Screen.Subject.Switch" parent="Widget.AppCompat.CompoundButton.Switch" />

    <style name="Notifications.Subjects.Screen.SaveButton" parent="@style/Widget" />

    <!-- BottomSheet Subject Notification Types -->
    <style name="Notifications.Subjects.Type.Icon" parent="@style/Widget" />

    <style name="Notifications.Subjects.Type.Row" parent="@style/Widget" />

    <style name="Notifications.Subjects.Type.Switch" parent="Widget.AppCompat.CompoundButton.CheckBox" />

    <!-- BottomSheet Subject Notification Error -->
    <style name="Notifications.Subjects.Error.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Notifications.Subjects.Type.Name" parent="Widget.AppCompat.TextView" />

    <style name="Notifications.Subjects.Type.Name.Active" parent="Notifications.Subjects.Type.Name" />

    <style name="Notifications.Subjects.Error.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#000</item>
    </style>

    <style name="Notifications.Subjects.Loading.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/background_white</item>
    </style>

    <style name="Notifications.Subjects.Type.Saving.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/background_white</item>
    </style>
</resources>